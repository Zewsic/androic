<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activites.MainActivity" android:orientation="vertical" android:gravity="center_horizontal|top"
        android:background="#50008E">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130px" android:id="@+id/Head">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#8000FF" android:id="@+id/Body">
        <TextView
                android:text="Androic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/appName" android:textSize="24sp"
                android:textStyle="bold" android:textColor="#FFFFFF" android:gravity="center_horizontal"
                android:layout_marginTop="36px" android:layout_marginBottom="20px"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="450px" android:paddingLeft="64px" android:paddingRight="64px"
                android:paddingTop="24px" android:paddingBottom="24px" android:id="@+id/news">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:background="#FFF"
                    android:layout_marginRight="24px" android:paddingTop="24px" android:paddingLeft="48px"
                    android:id="@+id/news_text">
                <TextView
                        android:text="Androic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/NewsTitle" android:textColor="#000000"
                        android:textStyle="bold" android:textSize="24sp"/>
                <TextView
                        android:text="Теперь вы можете компилировать APK файлы из исходников прямо на своем устройстве!"
                        android:layout_width="197dp"
                        android:layout_height="wrap_content" android:id="@+id/NewsText" android:textColor="#000000"
                        android:textStyle="bold" android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="2" android:background="#00FFFFFF"
                    android:id="@+id/social_links">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1"
                        android:layout_marginBottom="10px" android:background="#CF0404" android:id="@+id/ytLink">
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:layout_marginTop="10px"
                        android:background="#5181B8" android:id="@+id/vkLink">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingTop="24px" android:paddingRight="64px"
                android:paddingLeft="64px" android:id="@+id/compiler">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="266dp" android:background="#FFFFFF" android:id="@+id/compiler_"
                    android:padding="20px">
                <TextView
                        android:text="Компилировать"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/compileName"
                        android:gravity="center_horizontal" android:textStyle="bold" android:textSize="18sp"
                        android:textColor="#000000"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="106dp" android:paddingLeft="32px" android:paddingRight="32px">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="88dp" app:srcCompat="@drawable/ic_launcher_foreground"
                                android:id="@+id/JFbtn" android:onClick="getJavaFolderPath"/>
                        <TextView
                                android:text="Java Folder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView5"
                                android:textColor="#000000" android:textStyle="bold"
                                android:gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="88dp" app:srcCompat="@drawable/ic_launcher_foreground"
                                android:id="@+id/RFbtn" android:onClick="getResFolderPath"/>
                        <TextView
                                android:text="Res Folder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView5"
                                android:textColor="#000000" android:textStyle="bold"
                                android:gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="88dp" app:srcCompat="@drawable/ic_launcher_foreground"
                                android:id="@+id/MFbtn" android:onClick="getManifestFile"/>
                        <TextView
                                android:text="Manifest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView5"
                                android:textColor="#000000" android:textStyle="bold"
                                android:gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="88dp" app:srcCompat="@drawable/ic_launcher_foreground"
                                android:id="@+id/AFbtn"/>
                        <TextView
                                android:text="Android.jar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView5"
                                android:textColor="#000000" android:textStyle="bold"
                                android:gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:text="Compile!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/c_btn"
                android:onClick="c_btn"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/co"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@+id/c_btn" app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"/>
        <TextView
                android:text="TextView"
                android:layout_width="411dp"
                android:layout_height="match_parent" android:id="@+id/cl"
                android:gravity="center_horizontal|top" android:textSize="8sp" android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>