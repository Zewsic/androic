<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activites.MainActivity" android:orientation="vertical" android:gravity="center_horizontal|top"
        android:background="#000">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130px" android:id="@+id/Head" android:background="#000">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#1f1f1f" android:id="@+id/Body">
        <TextView
                android:text="Androic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/appName" android:textSize="24sp"
                android:textStyle="bold" android:textColor="#FFFFFF" android:gravity="center"
                android:layout_marginTop="32px" android:layout_marginBottom="32px"/>
        <Button
                android:text="AndroidManifest.xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/get_m" android:layout_weight="0"
                android:background="#2F2F2F" android:layout_marginHorizontal="32dp" android:layout_marginBottom="10dp"
                android:padding="20dp" android:textSize="16sp" android:textStyle="bold"
                android:onClick="getManifestFile"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingLeft="32dp" android:paddingRight="32dp">
            <Button
                    android:text="Java Folder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/get_j" android:layout_weight="1"
                    android:background="#2F2F2F" android:layout_marginRight="5dp" android:padding="20dp"
                    android:textSize="16sp" android:textStyle="bold" android:onClick="getJavaFolderPath"/>
            <Button
                    android:text="Res Folder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/get_r" android:layout_weight="1"
                    android:background="#2F2F2F" android:layout_marginLeft="5dp" android:padding="20dp"
                    android:textSize="16sp" android:textStyle="bold" android:onClick="getResFolderPath"/>
        </LinearLayout>
        <TextView
                android:layout_width="411dp"
                android:layout_height="match_parent" android:id="@+id/cl"
                android:gravity="center_horizontal|top" android:textSize="12sp" android:visibility="visible"
                android:background="#001F1F1F" android:textColor="#FFFFFF" android:layout_weight="1"/>
        <Button
                android:text="Compile!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/compile_btn" android:layout_weight="0"
                android:background="#2F2F2F" android:layout_marginHorizontal="32dp" android:layout_marginBottom="10dp"
                android:padding="5dp" android:textSize="16sp" android:textStyle="bold" android:onClick="c_btn"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/co"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@+id/c_btn" app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>